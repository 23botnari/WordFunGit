<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/rl_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:id="@+id/btn_setting"
                        android:layout_width="@dimen/button_bg"
                        android:layout_height="@dimen/button_bg"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/setting" />

                    <ImageView
                        android:id="@+id/btn_achieve"
                        android:layout_width="@dimen/button_bg"
                        android:layout_height="@dimen/button_bg"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/ic_achievement" />

                    <TextView
                        android:id="@+id/txt_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/background_coins"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Nivel"
                        android:textColor="@color/navy"
                        android:textSize="@dimen/button_text" />


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp">

                        <TextView
                            android:id="@+id/txt_credit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/txt_setting"
                            android:background="@drawable/background_dollar"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="000"
                            android:textColor="@color/navy"
                            android:textSize="@dimen/button_text" />

                        <ImageView
                            android:layout_width="@dimen/button_bg"
                            android:layout_height="@dimen/button_bg"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/star" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/bg_wordbox_xlarge" />

                    <LinearLayout
                        android:id="@+id/ll_top"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/btn_ad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/button"
                                android:layout_height="@dimen/button"
                                android:padding="5dp"
                                android:src="@drawable/ic_ad" />

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="70dp"
                                android:layout_height="25dp"
                                android:background="@drawable/admoney"
                                android:paddingLeft="0dp"
                                android:paddingTop="5dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="5dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_hint"
                            android:layout_width="97dp"
                            android:layout_height="129dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="8dp"
                            android:orientation="vertical">
                            <!--  <RelativeLayout
                            android:id="@+id/dollar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bg_hint"
                            android:gravity="right|center_vertical"
                            android:layout_marginLeft="@dimen/text"
                            android:paddingRight="@dimen/text"
                            android:paddingLeft="@dimen/button_text"
                            android:text="100"
                            android:textColor="@color/white" />

                            <ImageView
                            android:layout_width="@dimen/txt_setting"
                            android:layout_height="@dimen/txt_setting"
                            android:layout_centerVertical="true"
                            android:src="@drawable/dollar" />
                            </RelativeLayout>

                            <ImageView
                            android:layout_width="@dimen/button"
                            android:layout_height="@dimen/button"
                            android:padding="5dp"
                            android:src="@drawable/ic_hint" />

                            <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/background_text"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center"
                            android:paddingLeft="7dp"
                            android:paddingRight="7dp"
                            android:text="Hint"
                            android:textColor="@color/white" />

                           -->
                            <FrameLayout
                                android:id="@+id/dollar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="86dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/button"
                                    android:layout_height="@dimen/button"
                                    android:layout_gravity="center_vertical|end"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginRight="5dp"
                                    android:padding="5dp"
                                    android:src="@drawable/ic_hint" />

                                <ImageView
                                    android:id="@+id/imageView3"
                                    android:layout_width="70dp"
                                    android:layout_height="25dp"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:background="@drawable/hintmoney"
                                    android:paddingLeft="0dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="5dp"
                                    android:paddingBottom="5dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="3dp"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginTop="2dp"
                                    android:background="@drawable/background_text"
                                    android:fontFamily="@font/roboto_bold"
                                    android:gravity="center"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:rotation="-360"
                                    android:rotationX="-360"
                                    android:rotationY="-360"
                                    android:singleLine="true"
                                    android:text="Indiciu"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/button_text" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_middle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/btn_hint"
                            android:layout_toRightOf="@+id/btn_ad"
                            android:gravity="center"
                            android:orientation="horizontal" />


                        <LinearLayout
                            android:id="@+id/btn_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="7dp"
                            android:layout_marginBottom="7dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/button"
                                android:layout_height="@dimen/button"
                                android:padding="5dp"
                                android:src="@drawable/ic_rate" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <com.games.wordfun.view.CircularLayout
                                android:id="@+id/circular_layout"
                                android:layout_width="@dimen/radius"
                                android:layout_height="@dimen/radius"
                                android:background="@drawable/bg_circle" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_shuffle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="7dp"
                            android:layout_marginBottom="7dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/button"
                                android:layout_height="@dimen/button"
                                android:padding="5dp"
                                android:src="@drawable/ic_shuffle" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>